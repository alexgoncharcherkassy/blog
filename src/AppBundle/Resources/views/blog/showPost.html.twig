{% extends '::base.html.twig' %}

    {% block panel %}
        {% for post in posts %}
            <div class="panel panel-default">
                <div class="panel-heading" style="margin-bottom: 0">
                    <a href="{{ path('show_category', {'slug': post.category.slug}) }}"
                       class="pull-right">Category: {{ post.category.categoryName }}</a>
                    <h4>{{ post.titlePost }}</h4>
                    <small>Rating post</small>
                    <span class="badge badge-info">{{ post.rating|round(1, 'floor') }}</span>
                </div>

                <div class="panel-body">
                    <p>
                        <small>Published {{ post.createdAt|date('d.m.Y h:m') }} by Anonymous</small>
                        {% if post.createdAt < post.updateAt %}
                            <small>Updated {{ post.updateAt|date('d.m.Y h:m') }} by Anonymous</small>
                        {% endif %}

                        {% for tag in post.tags %}
                            <a href="{{ path('show_tags', {'slug': tag.slug}) }}" class="pull-right">| {{ tag.tagName }}
                                |</a>
                        {% endfor %}
                    </p>

                    {% if post.pathImage and post.nameImage %}
                        <img src="{{ post.pathImage | imagine_filter('blog_show') }}" class="img-thumbnail pull-left"
                             alt="{{ post.nameImage }}" style="margin-right: 15px">
                    {% endif %}
                    <div class="thumbnail">
                        <p>{{ post.textPost|nl2br }}</p>
                        <br/><br/>
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <br/>
                        <input type="submit" value="Send" class="btn btn-large btn-primary">
                        {{ form_end(form) }}
                    </div>
                    <strong>Comments</strong>
                    {% for comment in post.comments %}
                        <ul class="thumbnail" style="width: 65%; margin-left: 20px">
                            {{ form(formDeleteComment[comment.id], {'attr' : {'style' : 'text-align : right'}}) }}
                            <small>Published {{ comment.createdAt|date('d.m.Y H:m') }} by Anonymous</small>
                            <div class="col-md-6 text-left">
                                Rating
                                <span class="badge badge-info">{{ comment.rating }}</span>
                            </div>
                            <li class="span5" style="list-style: none">
                                <div class="thumbnail">
                                    {{ comment.textComment }}
                                </div>
                            </li>
                        </ul>
                    {% endfor %}
                </div>

            </div>
        {% endfor %}
    {% endblock %}

    {% block sidebar1 %}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>Most Popular</h4>
                {{ render(controller('AppBundle:Blog:showMostPopular')) }}
            </div>
        </div>
    {% endblock %}

    {% block sidebar2 %}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>Last comments</h4>
                {{ render(controller('AppBundle:Blog:showLastComment')) }}
            </div>
        </div>
    {% endblock %}

        {% block sidebar3 %}
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4>Tags cloud</h4>
                    {{ render(controller('AppBundle:Blog:TagsCloud')) }}
                </div>
            </div>
        {% endblock %}