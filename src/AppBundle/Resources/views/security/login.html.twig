{% extends '@App/layoutAdmin.html.twig' %}

{% block panel %}
<div class="" style="background-color: white">

                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form class="form col-md-12 center-block" method="post" action="{{ path('login_check') }}">
                        <div class="form-group">
                            <input type="text" class="form-control input-lg" placeholder="Login" name="_username" value="{{ last_username }}">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control input-lg" placeholder="Password" name="_password">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-lg btn-block">Sign In</button>
                            <span class="pull-right"><a href="#">Register</a></span><span><a href="#">Need
                                    help?</a></span>
                        </div>
                    </form>

</div>
{% endblock %}