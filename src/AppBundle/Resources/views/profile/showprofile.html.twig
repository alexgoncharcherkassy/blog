{% extends '@App/layoutAdmin.html.twig' %}

{% block panel %}
<div class="col-md-12 well">
    <div class="col-md-4">
        {% if form is not defined %}
        <table class="table-condensed table-bordered" style="font-size: large">
            <tr>
                <td>Login</td>
                <td>{{ profile.username }}</td>
            </tr>
            <tr>
                <td>Name</td>
                <td>{{ profile.firstName | capitalize }} {{ profile.lastName | capitalize }}</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>{{ profile.email }}</td>
            </tr>
            <tr>
                <td>Date register</td>
                <td>{{ profile.createdAt | date("d-m-Y") }}</td>
            </tr>
            <tr>
                <td>Date last update</td>
                <td>{{ profile.updateAt | date("d-m-Y") }}</td>
            </tr>
        </table>
        <br/>
        <a href="{{ path('user_profile_edit') }}" class="btn btn-large btn-primary">Edit profile</a>
        {% endif %}
        <br/>
        {% if form is defined %}
            {{ form(form) }}
            <br/>
            <button class="btn btn-large btn-primary">Save</button>
        {% endif %}
    </div>
    <div class="col-md-8">
        <table class="table-condensed table-bordered">
            <tr>
                <th>Count your posts</th>
                <th>Count your comments</th>
                <th>All comments your posts</th>
                <th>Max rating your posts</th>
            </tr>
        <tr style="text-align: center">
            <td><div class="label label-primary">{{ countPosts }}</div></td>
            <td><div class="label label-primary">{{ countComments }}</div></td>
            <td><div class="label label-primary">{{ allComment }}</div></td>
            <td><div class="label label-primary">{{ maxRating }}</div></td>
        </tr>
        </table>
    </div>
</div>
{% endblock %}